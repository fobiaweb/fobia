{
    "name": "fobiaweb/fobia",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "http://faclib.github.io/packages/p/smarty"
        }
    ],

    "require": {
        "php": ">=5.3.0",
        "fobiaweb/ezc-database": "1.*",
        "fobiaweb/slim": "3.0.0",
        "monolog/monolog": "~1",
        "symfony/console": "~2.5",
        "symfony/debug": "~2.5",
        "symfony/filesystem": "~2.5",
        "symfony/yaml": "~2.5"
    },
    "require-dev": {
        "php": ">=5.3.0",
        "smarty/smarty": "~3",
        "twig/twig": "1.*"
    },
    "autoload": {
        "psr-0": { 
            "": [ 
                "src/", 
                "app/classes/" 
            ] 
        },
        "classmap": [
            "src/Fobia/lib",
            "app/classes/api"
        ],
        "files": [
            "src/Fobia/Base/common.php",
            "app/bootstrap.php"
        ]
