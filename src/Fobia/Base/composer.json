{
    "name": "fobiaweb/base",
    "type": "library",
    "description": "Fobia Base Component",
    "license": "MIT",
    "require": {
        "php": ">=5.3.3",

        "fobiaweb/ezc-database": "1.*",
        "fobiaweb/slim": "3.*"
