DirectoryIndex index.php
Options -Indexes
Options +FollowSymLinks

# handle all queries within main script
<IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^([a-z0-9])+(/.*)*$ index.php  [QSA,L]
    # RewriteRule .* index.php/$0 [PT]
</IfModule>

